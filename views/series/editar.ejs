<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form action="" method="post">
                    <h2>Editar Série</h2>
                    <div class="form-group">
                        <label for="name">Nome da Série</label>
                        <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp" placeholder="Informe o Nome" value="<%=serie.name%>">
                        <small id="nameHelp" class="form-text text-muted">Nome da série a ser salvo.</small>
                        <% if(errors && errors.indexOf('name')>=0){ %>
                            <small id="nameHelp" class="form-text text-muted">Por favor, informe o nome da série.</small>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-control" id="status" name="status">
                            <% labels.forEach( l => { %>
                                <option value="<%=l.id%>" <%if(l.id===serie.status){%> selected="selected" <%}%> > <%=l.name%> </option>
                            <% }) %>
                        </select>
                    </div>
                    <button class="btn btn-primary">Atualizar</button>
                </form>
            </div>
        </div>
      </div>
    </section>

<% include ../partials/footer %>
